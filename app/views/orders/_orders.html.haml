%table.table
  %thead
    %tr
      %th 注文日
      %th 配達日
      %th 配達時間帯
      %th 合計
  %tbody
    - orders.each do |order|
      %tr
        %td= l(order.created_at)
        %td= l(order.delivery_date)
        %td= order.delivery_time_i18n
        %td= number_to_currency(order.billing_amount_with_tax)

.text-center= paginate orders
