%h1= @user.nickname

%table.table.table-bordered
  %tbody
    %tr
      %th プロフィール画像
      %td= image_tag attachment_url(@user, :profile_image, :fit, 300, 300, format: 'jpg')
    %tr
      %th メールアドレス
      %td= @user.email
    - if @user.destination.present?
      %tr
        %th 名前
        %td= @user.destination.name
      %tr
        %th 住所
        %td= @user.destination.address

= link_to '編集', edit_admin_user_path(@user)
\|
= link_to '一覧に戻る', admin_users_path
