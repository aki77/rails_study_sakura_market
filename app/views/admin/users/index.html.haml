%h1 ユーザ一覧

%table.table
  %thead
    %tr
      %th メールアドレス
      %th ニックネーム

  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.email, [:admin, user]
        %td= user.nickname
        %td= link_to '編集', edit_admin_user_path(user)
        %td= link_to '削除', [:admin, user], method: :delete, data: { confirm: '本当に削除してもよろしいですか?' }
