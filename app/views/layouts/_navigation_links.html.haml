- if signed_in?
  %li= link_to '日記を書く', new_diary_path
  %li.dropdown#fat-menu
    %a.dropdown-toggle{ 'data-toggle' => 'dropdown', :href => '#' }
      = current_user.nickname
      %b.caret
    %ul.dropdown-menu
      %li= link_to '設定', edit_user_registration_path
      %li= link_to '送付先情報', edit_destination_path
      %li.divider
      %li= link_to 'ログアウト', destroy_user_session_path, method: :delete
- else
  %li= link_to 'ログイン', new_user_session_path
  %li= link_to 'ユーザ登録', new_user_registration_path
